<body>
  <div class="banking-app">
    <div class="balance">Balance: $<span id="balance">0.00</span></div>
    <div class="buttons">
      <button class="deposit-btn" onclick="handleTransaction('deposit')">Deposit</button>
      <button class="withdraw-btn" onclick="handleTransaction('withdraw')">Withdraw</button>
    </div>
  </div>

  <script>
    let balance = 0.00;

    function handleTransaction(type) {
      const input = prompt(`Enter amount to ${type}:`);
      const amount = parseFloat(input);

      if (isNaN(amount) || amount <= 0) {
        alert("Please enter a valid positive number.");
        return;
      }

      if (type === 'withdraw' && amount > balance) {
        alert("Insufficient funds.");
        return;
      }

      if (type === 'deposit') {
        balance += amount;
      } else if (type === 'withdraw') {
        balance -= amount;
      }

      document.getElementById('balance').textContent = balance.toFixed(2);
    }
  </script>
</body>
